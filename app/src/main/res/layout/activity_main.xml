<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    tools:context="com.example.djidemo.MainActivity">

    <!--获取无人机的视频-->
    <TextureView
        android:id="@+id/video_prevewer_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:layout_weight="1.03"></TextureView>

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#ff3097fd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_main_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="@string/title_main_activity"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/activity_main_textTop"
            android:layout_width="960dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/title_dark"
            android:gravity="bottom"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/colorWhite"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relativeLayout"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_main_buttonYuv"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Live Stream" />


        <Button
            android:id="@+id/activity_main_screen_shot"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="start Screen Shot" />

        <Button
            android:id="@+id/activity_main_startDetect"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Start detect" />

        <Button
            android:id="@+id/activity_main_button2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="button2" />

        <TextView
            android:id="@+id/activity_main_detectRsult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-------"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/activity_main_showimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/video_prevewer_surface"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/draw_route"
        android:visibility="invisible"/>
</RelativeLayout>